<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rene.pomodorotrello.activities.ConfigActivity">

    <TextView
        android:text="@string/select_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_config"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        app:layout_constraintTop_toTopOf="@+id/activity_config"
        android:layout_marginTop="64dp" />


    <Spinner
        android:id="@+id/board_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/activity_config"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_config"
        android:layout_marginBottom="430dp">



    </Spinner>

</android.support.constraint.ConstraintLayout>
