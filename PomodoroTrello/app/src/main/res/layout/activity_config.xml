<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rene.pomodorotrello.activities.ConfigActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Trello"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp"
        android:id="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="@+id/activity_config"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_config"
        app:layout_constraintRight_toRightOf="@+id/activity_config"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_config"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:text="Connect"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/connect_button"
        app:layout_constraintLeft_toLeftOf="@+id/activity_config"
        app:layout_constraintTop_toBottomOf="@+id/tf_password"
        android:layout_marginTop="56dp"
        app:layout_constraintRight_toRightOf="@+id/activity_config" />

    <EditText
        android:layout_width="191dp"
        android:layout_height="43dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tf_username"
        android:contentDescription="username"
        app:layout_constraintLeft_toLeftOf="@+id/tf_password"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="64dp" />

    <EditText
        android:layout_width="191dp"
        android:layout_height="39dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_password"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tf_username"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_config"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_config"
        android:layout_marginTop="160dp" />

    <TextView
        android:text="Password"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/activity_config"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="@+id/activity_config"
        android:layout_marginBottom="288dp" />

</android.support.constraint.ConstraintLayout>
